<div class="container-fluid">
  <section
    class="section1 d-inline-block border-end border-danger p-2"
    style="width: 50%"
  >
    <h1 class="mx-auto my-2">Assigned reviews</h1>
    <div class="d-flex flex-wrap justify-content-around align-items-">
      <% for(review of assignedReviews) {%>
      <div class="col-md-5 border border- p-2 rounded shadow mt-2">
        <form
          action="/review/create/<%=employee._id%>"
          class="d-flex flex-column"
          method="POST"
        >
          <div class="mb-3">
            <label for="recipient " class="fw-semibold">Recipient: </label>
            <input
              type="email"
              class="form-control mt-2"
              id="recipient"
              value="<%= review.email %>"
              readonly
              name="recipient_email"
            />
          </div>
          <div class="mb-3">
            <label for="feedback-form" class="form-label fw-semibold"
              >Feedback:</label
            >
            <textarea
              class="form-control"
              id="feedback-form"
              name="feedback"
              rows="3"
            ></textarea>
          </div>
          <button
            class="btn btn-primary align-self-end"
            style="width: 40%"
            type="submit"
          >
            Submit
          </button>
        </form>
      </div>
      <%} %>
    </div>
  </section>
  <section class="seciton2 d-inline-block border-start" style="width: 45%">
    <div class="d-flex flex-column  justify-content-center align-items-center">
      <h1 class="mx-auto my-2">Reviews given by others</h1>
      <div class="table-wrapper" style="width: 80%">
        <table class="table mt-2">
          <thead>
            <tr>
              <th scope="col">Reviewer</th>
              <th scope="col">Feedback</th>
            </tr>
          </thead>
          <% for (i of reviewsGivenByothers) {%> <% if(i.reviewer.id !=
          employee.id) {%>
          <tbody>
            <tr>
              <td><%= i.reviewer.email %></td>
              <td><%= i.review %></td>
            </tr>
          </tbody>
          <%} %> <%} %>
        </table>
      </div>
    </div>
  </section>
</div>
